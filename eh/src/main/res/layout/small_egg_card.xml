<?xml version="1.0" encoding="utf-8"?>
<com.cael6.eh.cael6.Card xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/small_card_width"
    android:layout_height="@dimen/small_card_height"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/small_card_padding"
    android:tag="card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_background_desc"
            android:scaleType="fitCenter"
            android:src="@drawable/egg"
            android:tag="cardImage" />

        <com.cael6.eh.cael6.MagicTextView
            android:tag="hatch_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            />
    </RelativeLayout>
</com.cael6.eh.cael6.Card>