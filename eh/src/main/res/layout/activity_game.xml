<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#111111">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include
            layout="@layout/hand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playerHand"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>

        <include
            layout="@layout/board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/playerHand"
            android:id="@+id/playerBoard"
            android:layout_centerHorizontal="true" />

        <include
            layout="@layout/status_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignLeft="@id/playerBoard"
            android:layout_alignTop="@id/playerBoard"
            android:layout_marginTop="10dp"
            android:id="@+id/playerStatusBar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="endTurn"
            android:text="@string/endTurn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        <include
            layout="@layout/board"
            android:id="@+id/enemyBoard"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/playerBoard" />


        <include
            layout="@layout/status_bar"
            android:id="@+id/enemyStatusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@id/enemyBoard"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/enemyBoard"
            android:layout_centerHorizontal="true">
            <include
                layout="@layout/hand"
                android:id="@+id/enemyHand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </FrameLayout>

    </RelativeLayout>

    <include
        layout="@layout/preview"
        android:id="@+id/preview" />
</FrameLayout>