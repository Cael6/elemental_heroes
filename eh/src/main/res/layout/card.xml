<?xml version="1.0" encoding="utf-8"?>
<com.cael6.eh.cael6.Card xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cael6="http://schemas.android.com/apk/com.cael6.eh.cael6"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="card"
    android:layout_width="@dimen/large_card_width"
    android:layout_height="@dimen/large_card_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:tag="cardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/main_background"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_background_desc" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:fadingEdge="vertical"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:tag="traitLL"
                    android:layout_width="@dimen/large_card_description_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_description_background"
                    android:orientation="vertical"/>
            </ScrollView>
        </RelativeLayout>

        <LinearLayout
            android:tag="costLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <com.cael6.eh.cael6.MagicTextView
                android:tag="attack"
                android:layout_width="@dimen/large_card_icon_dim"
                android:layout_height="@dimen/large_card_icon_dim"
                android:background="@drawable/damage"
                android:textColor="#FFFFFF"
                android:text="@string/example_attack_value"
                android:paddingBottom="10dp"
                android:textStyle="bold"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:shadowDx="4"
                android:shadowColor="#FF222222"
                cael6:typeface="CevicheOne-Regular"
                cael6:strokeColor="#FF111111"
                cael6:strokeWidth="4dp"
                android:textSize="@dimen/large_card_text_size"
                android:gravity="center" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/large_card_icon_dim"
                android:layout_weight="1" />

            <com.cael6.eh.cael6.MagicTextView
                android:tag="defense"
                android:layout_width="@dimen/large_card_icon_dim"
                android:layout_height="@dimen/large_card_icon_dim"
                android:background="@drawable/defense"
                android:textColor="#FFFFFF"
                android:text="@string/example_armor_value"
                android:textStyle="bold"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:shadowDx="4"
                android:shadowColor="#FF222222"
                cael6:typeface="CevicheOne-Regular"
                cael6:strokeColor="#FF111111"
                cael6:strokeWidth="4dp"
                android:textSize="@dimen/large_card_text_size"
                android:gravity="center" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/large_card_icon_dim"
                android:layout_weight="1" />

            <com.cael6.eh.cael6.MagicTextView
                android:tag="health"
                android:layout_width="@dimen/large_card_icon_dim"
                android:layout_height="@dimen/large_card_icon_dim"
                android:background="@drawable/life"
                android:textColor="#FFFFFF"
                android:text="@string/example_health_value"
                android:textStyle="bold"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:shadowDx="4"
                android:shadowColor="#FF222222"
                cael6:typeface="CevicheOne-Regular"
                cael6:strokeColor="#FF111111"
                cael6:strokeWidth="4dp"
                android:textSize="@dimen/large_card_text_size"
                android:gravity="center" />
        </LinearLayout>
    </RelativeLayout>
</com.cael6.eh.cael6.Card>