<?xml version="1.0" encoding="utf-8"?>
<com.cael6.eh.cael6.EggCard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cael6="http://schemas.android.com/apk/com.cael6.eh.cael6"
    xmlns:tools="http://schemas.android.com/tools"
    android:tag="card"
    android:layout_width="@dimen/large_card_width"
    android:layout_height="@dimen/large_card_height">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:tag="cardImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/egg"
        android:scaleType="fitCenter"
        android:contentDescription="@string/image_background_desc" />

    <com.cael6.eh.cael6.MagicTextView
        android:tag="hatch_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="80dp"
        android:textColor="#FFFFFF"
        android:text="2"
        android:textStyle="bold"
        />

    </RelativeLayout>
</com.cael6.eh.cael6.EggCard>